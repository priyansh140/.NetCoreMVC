@model List<Product>

<div class="container">
    |<div class="row p-4 pb-2 pt-3">
        <div class="col-6">
            <h2 class="text-primary">
                Product List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Product
            </a>
        </div>
    </div>
<table class="table table-border table-striped">
    <thead>
    <tr>
        <th>Product Name</th>
        <th>ISBN</th>
        <th>Price</th>
        <th>Author</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
        <tr>
            <td>@obj.Title</td>
            <td>@obj.ISBN</td>
            <td>@obj.ListPrice</td>
            <td>@obj.Author</td>
            <td>
               <div class="w-75 btn-group" role="group">
                 <a asp-route-Id="@obj.Id" asp-controller="Product" asp-action="Edit" class="btn btn-primary mx-2">
                      <i class="bi bi-pencil-square"></i> Edit
                 </a>
                 <a asp-route-Id="@obj.Id" asp-controller="Product" asp-action="Delete" class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete
                 </a>
               </div>
            </td>
         </tr>
        
        }
    </tbody>
</table>
</div>